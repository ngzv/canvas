// jsconfig.json
// JavaScript 项目的配置文件
// 用于告诉 IDE（如 VS Code）如何理解项目的结构、模块解析规则、编译选项等，主要作用是增强 JavaScript 的开发体验（如智能提示、路径别名跳转、类型检查等）。它基于 TypeScript 的配置规范，但专门用于 JavaScript 项目。

{
  // 配置 `JavaScript` 编译器选项
  "compilerOptions": {
    "target": "esnext",  // 使用最新的 `ECMAScript` 标准
    "module": "esnext",  // 使用最新的模块系统
    "moduleResolution": "node",  // 使用 `Node.js` 模块解析策略
    "baseUrl": ".",  // 基础路径 `URL`,用于解析非相对模块名称
    "allowJs": true,  // 允许编译 `JavaScript` 文件
    "checkJs": false,  // 不检查 `JavaScript` 文件中的类型错误
    "jsx": "preserve",  // 保留 `JSX` 语法,不进行转换
    // 配置路径别名，`@` 指向 `src` 目录,与 `vite.config` 中 `alias` 配置同步
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  // 显式指定要包含的文件
  "include": ["src/**/*.js", "src/**/*.vue", "src/**/*.jsx"],
  // 从编译中排除 `node_modules` 和 `dist` 目录
  "exclude": ["node_modules", "dist"]
}